[user]
	name = Shinnosuke TAKEDA
	email = shinnosuke@gmail.com

[core]
	excludesfile = /Users/shinnosuke/.gitignore
    editor = emacs

[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 

[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true

[push]
    default = tracking

[alias]
    alias = !git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\\\t => \\2/'
    ad = add .
    br = branch
    ba = branch -a
    bn = branch --no-merged
    ci = commit -am
    co = checkout
    di = diff
    lg = log --graph --date=short --pretty=format:'%Cgreen%h %cd %Cblue%cn \n %Creset%s'
    up = pull --rebase
    sh = show
    st = status
    wc = whatchanged --graph
    lv  = log --graph --date=iso --pretty=format:'%Cgreen%cd %Cblue%cn %Cred%h\n  %Creset%s' --name-status
